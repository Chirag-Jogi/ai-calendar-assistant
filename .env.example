# AI Appointment Assistant - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Groq AI API Key (Get from: https://console.groq.com)
GROQ_API_KEY="your_groq_api_key_here"

# Google Calendar Service Account Credentials Path
GOOGLE_CREDENTIALS_PATH="config/credentials/service_account.json"

# Optional: Application Settings
APP_NAME="AI Appointment Assistant"
DEBUG=false
PORT=8501

# Optional: Business Configuration
BUSINESS_NAME="Your Business Name"
BUSINESS_HOURS_START="10:00"
BUSINESS_HOURS_END="18:00"
TIMEZONE="UTC"

# Note: Never commit the actual .env file to Git!
# This is just a template to show what variables are needed.
